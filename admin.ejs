<div class="bg-slate-800/50 backdrop-blur-xl p-8 rounded-3xl border border-slate-700 mb-10 shadow-2xl">
    <h2 class="text-xl font-bold mb-6 italic flex items-center gap-3 text-blue-400">
        <i class="fas fa-plus-circle"></i> Yangi mahsulot qo'shish
    </h2>
    <form action="/admin/add-item" method="POST" enctype="multipart/form-data" class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <input type="hidden" name="type" value="product">
        
        <input type="text" name="title" placeholder="Mahsulot nomi" required class="bg-slate-900/50 p-3 rounded-xl outline-none border border-slate-700 focus:border-blue-500 text-white">
        <input type="text" name="goal" placeholder="Narxi (masalan: 1 200 000)" required class="bg-slate-900/50 p-3 rounded-xl outline-none border border-slate-700 focus:border-blue-500 text-white">
        <input type="text" name="status" placeholder="Kategoriya" class="bg-slate-900/50 p-3 rounded-xl outline-none border border-slate-700 focus:border-blue-500 text-white">
        
        <div class="bg-slate-900/50 p-2 rounded-xl border border-slate-700 flex items-center gap-3">
            <label class="text-[10px] uppercase font-bold text-slate-500 pl-2">Rasm:</label>
            <input type="file" name="image" accept="image/*" class="text-xs text-slate-400 file:mr-4 file:py-1 file:px-3 file:rounded-lg file:border-0 file:text-xs file:font-bold file:bg-blue-600 file:text-white cursor-pointer">
        </div>

        <textarea name="description" placeholder="Tavsif..." required class="bg-slate-900/50 p-3 rounded-xl outline-none border border-slate-700 focus:border-blue-500 md:col-span-2 text-white h-24"></textarea>
        
        <button type="submit" class="md:col-span-2 bg-blue-600 hover:bg-blue-500 py-4 rounded-xl font-black transition text-white shadow-lg shadow-blue-500/20 uppercase tracking-widest">
            Mahsulotni bazaga qo'shish
        </button>
    </form>
</div>

<div class="bg-slate-800/50 backdrop-blur-xl p-8 rounded-3xl border border-emerald-500/20 mb-10 shadow-2xl">
    <h2 class="text-xl font-bold mb-6 italic text-emerald-400 flex items-center gap-3">
        <i class="fas fa-rocket"></i> Yangi startap qo'shish
    </h2>
    <form action="/admin/add-item" method="POST" enctype="multipart/form-data" class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <input type="hidden" name="type" value="startup">

        <input type="text" name="title" placeholder="Startap nomi" required class="bg-slate-900/50 p-3 rounded-xl outline-none border border-slate-700 focus:border-emerald-500 text-white">
        <input type="text" name="goal" placeholder="Investitsiya miqdori ($)" required class="bg-slate-900/50 p-3 rounded-xl outline-none border border-slate-700 focus:border-emerald-500 text-white">
        <input type="text" name="status" placeholder="Status (masalan: Faol)" class="bg-slate-900/50 p-3 rounded-xl outline-none border border-slate-700 focus:border-emerald-500 text-white">
        
        <div class="bg-slate-900/50 p-2 rounded-xl border border-slate-700 flex items-center gap-3">
            <label class="text-[10px] uppercase font-bold text-slate-500 pl-2">Loyiha rasmi:</label>
            <input type="file" name="image" accept="image/*" class="text-xs text-slate-400 file:mr-4 file:py-1 file:px-3 file:rounded-lg file:border-0 file:text-xs file:font-bold file:bg-emerald-600 file:text-white cursor-pointer">
        </div>

        <textarea name="description" placeholder="Loyiha tavsifi..." required class="bg-slate-900/50 p-3 rounded-xl outline-none border border-slate-700 focus:border-emerald-500 md:col-span-2 text-white h-24"></textarea>
        
        <button type="submit" class="md:col-span-2 bg-emerald-600 hover:bg-emerald-500 py-4 rounded-xl font-black transition text-white uppercase tracking-widest shadow-lg shadow-emerald-500/20">
            Startapni ro'yxatdan o'tkazish
        </button>
    </form>
</div>

<div class="bg-slate-800/50 backdrop-blur-xl p-8 rounded-3xl border border-purple-500/20 mb-10 shadow-2xl">
    <h2 class="text-xl font-bold mb-6 italic text-purple-400 flex items-center gap-3">
        <i class="fas fa-certificate"></i> Yangi patent qo'shish
    </h2>
    <form action="/admin/add-item" method="POST" enctype="multipart/form-data" class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <input type="hidden" name="type" value="patent">

        <input type="text" name="title" placeholder="Patent nomi" required class="bg-slate-900/50 p-3 rounded-xl outline-none border border-slate-700 focus:border-purple-500 text-white">
        <input type="text" name="status" placeholder="Muallif ismi" required class="bg-slate-900/50 p-3 rounded-xl outline-none border border-slate-700 focus:border-purple-500 text-white">
        <input type="text" name="goal" placeholder="Yil" required class="bg-slate-900/50 p-3 rounded-xl outline-none border border-slate-700 focus:border-purple-500 text-white">
        
        <textarea name="description" placeholder="Patent haqida qisqacha..." class="bg-slate-900/50 p-3 rounded-xl outline-none border border-slate-700 focus:border-purple-500 md:col-span-2 text-white h-20"></textarea>

        <div class="bg-slate-900/50 p-2 rounded-xl border border-slate-700 flex items-center gap-3 md:col-span-2">
            <label class="text-[10px] uppercase font-bold text-slate-500 pl-2">Hujjat rasmi:</label>
            <input type="file" name="image" accept="image/*" class="text-xs text-slate-400 file:mr-4 file:py-1 file:px-3 file:rounded-lg file:border-0 file:text-xs file:font-bold file:bg-purple-600 file:text-white cursor-pointer">
        </div>

        <button type="submit" class="md:col-span-2 bg-purple-600 hover:bg-purple-500 py-4 rounded-xl font-black transition text-white uppercase tracking-widest shadow-lg shadow-purple-500/20">
