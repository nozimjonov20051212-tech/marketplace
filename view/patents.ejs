<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patentlar | TIQXMMI</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Inter', sans-serif;
            background-color: #0f172a;
        }

        /* SAHIFA YUKLANISH PARDASI */
        .page-loader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: #0f172a; 
            z-index: 9999;
            transition: transform 0.8s cubic-bezier(0.77, 0, 0.175, 1);
            transform-origin: bottom;
        }
        .page-loader.hidden { transform: scaleY(0); }
        .loader-active { transform: scaleY(1) !important; transform-origin: top !important; }

        .main-bg {
            background: linear-gradient(rgba(15, 23, 42, 0.9), rgba(15, 23, 42, 0.95)), 
                        url('/marketplace_background.JPG');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            min-height: 100vh;
        }

        .patent-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 2.5rem;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .patent-card:hover {
            border-color: rgba(234, 179, 8, 0.5);
            background: rgba(255, 255, 255, 0.07);
            transform: translateY(-10px);
            box-shadow: 0 20px 40px -15px rgba(234, 179, 8, 0.2);
        }

        .glass-input {
            background: rgba(15, 23, 42, 0.6);
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }
        .glass-input:focus {
            border-color: #eab308;
            background: rgba(15, 23, 42, 0.8);
            box-shadow: 0 0 0 4px rgba(234, 179, 8, 0.1);
        }
    </style>
</head>
<body class="main-bg text-white">
    <div id="loader" class="page-loader"></div>

    <div class="max-w-7xl mx-auto px-6 py-8 flex justify-between items-center" data-aos="fade-down">
        <a href="/" class="group flex items-center gap-2 bg-slate-900/80 hover:bg-yellow-600 px-6 py-3 rounded-2xl transition-all duration-300 border border-slate-700 shadow-lg">
            <i class="fas fa-arrow-left text-yellow-500 group-hover:text-white transition-transform group-hover:-translate-x-1"></i>
            <span class="font-bold text-sm uppercase tracking-wider group-hover:text-white">Asosiy sahifa</span>
        </a>
        
        <% if (locals.isLoggedIn) { %>
            <div class="flex items-center gap-3 bg-yellow-500/10 border border-yellow-500/30 px-5 py-3 rounded-2xl">
                <div class="w-2 h-2 bg-yellow-500 rounded-full animate-ping"></div>
                <span class="text-yellow-500 font-black uppercase text-[10px] tracking-widest">Admin Active</span>
                <a href="/logout" class="bg-red-500/20 text-red-400 hover:bg-red-500 hover:text-white px-3 py-1 rounded-lg text-[10px] font-black transition">CHIQISH</a>
            </div>
        <% } %>
    </div>

    <header class="text-center mb-20" data-aos="zoom-in">
        <h1 class="text-6xl md:text-7xl font-black uppercase tracking-tighter italic">
            Pa<span class="text-yellow-500">tent</span>lar
        </h1>
        <div class="w-24 h-1 bg-yellow-500 mx-auto mt-4 rounded-full"></div>
        <p class="text-slate-400 text-sm mt-4 font-bold uppercase tracking-[0.3em] opacity-70">Intellektual mulk reyestri</p>
    </header>

    <% if (locals.isLoggedIn) { %>
    <div class="max-w-4xl mx-auto px-6 mb-20" data-aos="fade-up">
        <div class="bg-slate-800/40 backdrop-blur-2xl p-10 rounded-[3rem] border border-yellow-500/30 shadow-2xl relative overflow-hidden">
            <div class="absolute top-0 right-0 p-8 opacity-5">
                <i class="fas fa-certificate text-8xl text-yellow-500"></i>
            </div>
            
            <h2 class="text-2xl font-bold mb-8 flex items-center gap-3 text-yellow-500 uppercase tracking-tight">
                <i class="fas fa-plus-circle"></i> Yangi Patent qo'shish
            </h2>
            
            <form action="/admin/add-item" method="POST" enctype="multipart/form-data" class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <input type="hidden" name="type" value="patent">
                
                <div class="space-y-2">
                    <label class="text-[10px] font-bold uppercase text-slate-500 ml-2">Patent nomi</label>
                    <input type="text" name="title" placeholder="Masalan: Aqlli sug'orish tizimi" required class="glass-input w-full p-4 rounded-2xl outline-none text-white">
                </div>

                <div class="space-y-2">
                    <label class="text-[10px] font-bold uppercase text-slate-500 ml-2">Patent raqami</label>
                    <input type="text" name="goal" placeholder="IAP 06543" required class="glass-input w-full p-4 rounded-2xl outline-none text-white">
                </div>

                <div class="space-y-2 md:col-span-2">
                    <label class="text-[10px] font-bold uppercase text-slate-500 ml-2">Mualliflar</label>
                    <input type="text" name="status" placeholder="Ismoilov A., Sobirov B." class="glass-input w-full p-4 rounded-2xl outline-none text-white">
                </div>
                
                <div class="md:col-span-2 bg-slate-900/40 p-5 rounded-2xl border border-dashed border-slate-700">
                    <label class="block text-[10px] uppercase font-bold text-slate-500 mb-3 text-center">Patent hujjati nusxasi (Rasm)</label>
                    <input type="file" name="image" accept="image/*" class="w-full text-xs text-slate-400 file:mr-4 file:py-2 file:px-6 file:rounded-xl file:border-0 file:text-xs file:font-black file:bg-yellow-500 file:text-white cursor-pointer hover:file:bg-yellow-400 transition">
                </div>

                <div class="md:col-span-2 space-y-2">
                    <label class="text-[10px] font-bold uppercase text-slate-500 ml-2">Qisqacha tavsif</label>
                    <textarea name="description" placeholder="Patentning mazmuni va ahamiyati haqida..." required class="glass-input w-full p-4 rounded-2xl outline-none text-white h-32"></textarea>
                </div>
                
                <button type="submit" class="md:col-span-2 bg-gradient-to-r from-yellow-600 to-yellow-400 hover:from-yellow-500 hover:to-yellow-300 py-5 rounded-2xl font-black transition-all text-white shadow-xl shadow-yellow-500/20 uppercase tracking-widest active:scale-[0.98]">
                    Ro'yxatga olishni tasdiqlash
                </button>
            </form>
        </div>
    </div>
    <% } %>

    <main class="max-w-7xl mx-auto px-6 pb-32">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
            <% if (locals.patents && patents.length > 0) { %>
                <% patents.forEach((patent, index) => { %>
                    <div class="patent-card p-8 relative flex flex-col group" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                        <% if (locals.isLoggedIn) { %>
                            <form action="/admin/delete/patent/<%= patent.id %>" method="POST" onsubmit="return confirm('Ushbu patentni o\'chirishni tasdiqlaysizmi?')" class="absolute top-6 right-6 z-10">
                                <button type="submit" class="bg-red-500/10 hover:bg-red-500 text-red-500 hover:text-white w-10 h-10 rounded-2xl transition-all flex items-center justify-center border border-red-500/20">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        <% } %>

                        <div class="aspect-[3/4] overflow-hidden rounded-3xl mb-8 border border-white/5 shadow-2xl relative group-hover:border-yellow-500/30 transition-colors">
                            <img src="<%= patent.image %>" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" onerror="this.src='/images/bino.jpeg'">
                            <div class="absolute inset-0 bg-gradient-to-t from-[#0f172a] via-transparent to-transparent opacity-60"></div>
                        </div>

                        <div class="flex-grow">
                            <div class="bg-yellow-500/10 text-yellow-500 text-[9px] font-black uppercase tracking-[0.2em] py-1 px-3 rounded-full inline-flex items-center gap-2 mb-4 border border-yellow-500/20">
                                <i class="fas fa-award"></i> No: <%= patent.goal %>
                            </div>
                            <h3 class="text-2xl font-bold mb-4 leading-tight group-hover:text-yellow-500 transition-colors"><%= patent.title %></h3>
                            <p class="text-slate-400 text-sm leading-relaxed mb-6 line-clamp-3">
                                <%= patent.description %>
                            </p>
                        </div>

                        <div class="pt-6 border-t border-white/5 flex items-center justify-between">
                            <div>
                                <span class="text-[9px] text-slate-500 uppercase font-black block mb-1">Asosiy muallif:</span>
                                <div class="text-sm font-bold text-slate-200">
                                    <%= patent.status %>
                                </div>
                            </div>
                            <div class="w-10 h-10 bg-slate-800 rounded-full flex items-center justify-center border border-white/5 text-yellow-500">
                                <i class="fas fa-fingerprint"></i>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-span-full text-center py-32 bg-white/5 rounded-[4rem] border border-dashed border-white/10" data-aos="fade-up">
                    <i class="fas fa-folder-open text-5xl text-slate-700 mb-6"></i>
                    <p class="text-slate-500 font-bold uppercase tracking-widest italic">Hozircha ro'yxatga olingan patentlar mavjud emas.</p>
                </div>
            <% } %>
        </div>
    </main>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        // AOS
        AOS.init({ once: true, duration: 1000, easing: 'ease-out-back' });

        // SAHIFA O'TISH ANIMATSIYASI
        window.addEventListener('load', () => {
            const loader = document.getElementById('loader');
            setTimeout(() => { loader.classList.add('hidden'); }, 200);
        });

        document.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', function(e) {
                if (this.hostname === window.location.hostname && !this.hash && !this.target) {
                    e.preventDefault();
                    const destination = this.href;
                    const loader = document.getElementById('loader');
                    loader.classList.remove('hidden');
                    loader.classList.add('loader-active');
                    setTimeout(() => { window.location.href = destination; }, 600);
                }
            });
        });
    </script>
</body>
</html>